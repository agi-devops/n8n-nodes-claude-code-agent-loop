{
  "name": "n8n-nodes-claude-agent",
  "version": "0.1.0",
  "description": "n8n node for Claude Code Agent SDK integration with multi-repo support",
  "keywords": ["n8n", "claude", "agent", "ai", "automation"],
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "n8n": {
    "n8nNodesApiVersion": 1,
    "nodes": ["dist/nodes/ClaudeAgent/ClaudeAgent.node.js"]
  },
  "scripts": {
    "build": "tsc && npm run copy-icons",
    "copy-icons": "cp nodes/ClaudeAgent/*.svg dist/nodes/ClaudeAgent/ 2>/dev/null || true",
    "dev": "tsc -w",
    "lint": "eslint nodes lib --ext .ts",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "latest",
    "simple-git": "^3.27.0"
  },
  "peerDependencies": {
    "n8n-workflow": "*"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "eslint": "^9.0.0",
    "n8n-workflow": "^1.70.0",
    "typescript": "^5.6.0"
  },
  "files": [
    "dist"
  ]
}
